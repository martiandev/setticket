<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.setschedule.setticket">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".view.app.STApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo_blue"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SetTicket">
        <activity
            android:screenOrientation="portrait"
            android:name=".view.activty.STSplashScreen"
            android:label="@string/app_name"
            android:theme="@style/Theme.SetTicket.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".view.activty.STActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SetTicket.NoActionBar"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".view.activty.menu.About"
            android:label="@string/app_name"
            android:theme="@style/Theme.SetTicket.NoActionBar"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".view.activty.menu.Settings"
            android:label="@string/app_name"
            android:theme="@style/Theme.SetTicket.NoActionBar"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".view.activty.menu.Search"
            android:label="@string/app_name"
            android:theme="@style/Theme.SetTicket.NoActionBar"/>
    </application>

</manifest>